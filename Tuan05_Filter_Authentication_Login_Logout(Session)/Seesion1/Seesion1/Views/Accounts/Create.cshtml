@model Seesion1.Models.Account

@{
    
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<style>
    .row{
        padding-top:10px;
    }
</style>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2 style="text-align:center">CREATE</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row" >
           <div class="col-md-4"><p style="margin-left:250px;margin-top:10px"> ID</p></div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-4"><p style="margin-left:250px;margin-top:10px"> Username</p></div>
            
            <div class="col-md-6">
                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-4"><p style="margin-left:250px;margin-top:10px"> Password</p></div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-4"><p style="margin-left:250px;margin-top:5px"> Full Name</p></div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-4"><p style="margin-left:250px;margin-top:0px"> Role</p></div>
            <div class="col-md-6">
                <div class="checkbox">
                    @Html.EditorFor(model => model.rol)
                    @Html.ValidationMessageFor(model => model.rol, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div style="text-align:center">
                <input type="submit" value="Create" class="btn btn-success" />
                @Html.ActionLink("Back to List", "Index")
            </div>
           
        </div>
    </div>
}


