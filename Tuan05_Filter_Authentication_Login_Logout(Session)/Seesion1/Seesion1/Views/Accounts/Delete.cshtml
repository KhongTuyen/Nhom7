@model Seesion1.Models.Account

@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}




<div>
    <h2 style="text-align:center">DELETE</h2>
    <hr />
    <center>
        <table class="table" style="width:450px">

            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Password</th>
                    <th>Full Name</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(model => model.id)</td>
                    <td>@Html.DisplayFor(model => model.username)</td>
                    <td>@Html.DisplayFor(model => model.password)</td>
                    <td>@Html.DisplayFor(model => model.name)</td>
                    <td>@Html.DisplayFor(model => model.rol)</td>
                </tr>
            </tbody>
           
        </table>
    </center>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="text-align:center">
            <input type="submit" value="Delete" class="btn btn-success" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
